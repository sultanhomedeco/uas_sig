generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Village {
  id        Int      @id @default(autoincrement())
  name      String
  latitude  Float
  longitude Float
  products  Product[]
}

model Product {
  id        Int      @id @default(autoincrement())
  name      String
  category  String
  price     Float
  stock     Int
  village   Village  @relation(fields: [villageId], references: [id])
  villageId Int
}
